{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <section class="bg-main px-6 py-24 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
            <h1 class="mt-2 text-4xl font-bold tracking-tight text-white sm:text-6xl">Blog</h1>
            <p class="mt-6 text-lg leading-8 text-gray-100">On the other hand, we denounce with righteous indignation and dislike men who are so beguiled and demoralized by the charms of pleasure of the moment.</p>
        </div>
    </section>
    <section class="bg-white py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl lg:max-w-4xl">
                <div class="space-y-20 lg:space-y-20">
                    {% for post in allPosts %}
                        <article class="relative isolate flex flex-col gap-8 lg:flex-row">
                            <div class="relative aspect-[16/9] sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0">
                                <img src="{{ post.mainPhoto }}" alt="Photo de l'article" class="absolute inset-0 h-full w-full rounded-2xl bg-gray-50 object-cover">
                                <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
                            </div>
                            <div>
                                <div class="flex items-center gap-x-4 text-xs">
                                    <time datetime="{{ post.createdAt | date('d F Y') }}" class="text-gray-500">{{ post.createdAt | date('d F Y') | format_date(locale='fr') }}</time>
                                    <span class="relative z-10 rounded-full bg-gray-100 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">{{ post.category.name }}</span>
                                </div>
                                <div class="group relative max-w-xl">
                                    <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                                        <a href="{{ path('app_blog_post', {'slug': post.slug }) }}">
                                            <span class="absolute inset-0"></span>
                                            {{ post.title }}
                                        </a>
                                    </h3>
                                    <p class="mt-5 text-sm leading-6 text-gray-600">{{ post.summary | u.truncate(131, '...') }}</p>
                                </div>
                                <div class="mt-6 flex border-t border-gray-900/5 pt-6">
                                    <div class="relative flex items-center gap-x-4">
                                        <img src="{{ asset('media/profilePhotos/'~post.authorProfilePhoto) }}" alt="Photo de profil du rÃ©dacteur" class="h-10 w-10 rounded-full bg-gray-50">
                                        <div class="text-sm leading-6">
                                            <p class="font-semibold text-gray-900">
                                                <a href="#">
                                                    <span class="absolute inset-0"></span>
                                                    {{ post.authorName }}
                                                </a>
                                            </p>
                                            <p class="text-gray-600">{{ post.authorJob }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
