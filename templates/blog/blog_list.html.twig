{% extends 'base.html.twig' %}

{% block robots %}index, follow{% endblock %}
{% block title %}Blog, expertise et conseil pour votre Fiduciaire{% endblock %}
{% block description %}Explorez le blog de Fiduciaire Genevoise pour des insights experts en comptabilité, audit et conseils d'entreprise en Suisse.{% endblock %}
{% block url %}{{ path('app_blog') }}{% endblock %}

{% block ogTitle %}Fiduciaire Genevoise - Blog, expertise et conseil pour votre Fiduciaire{% endblock %}
{% block ogUrl %}https://fiduciaire-genevoise.ch/blog{% endblock %}
{% block ogImage %}{{ asset('media/site/fiduciaire-genevoise-banniere.webp') }}{% endblock %}
{% block ogImageAlt %}Fiduciaire Genevoise{% endblock %}
{% block ogDescription %}Explorez le blog de Fiduciaire Genevoise pour des insights experts en comptabilité, audit et conseils d'entreprise en Suisse.{% endblock %}


{% block body %}
    <section class="bg-no-repeat bg-cover bg-center" style="background-image: url('{{ asset('media/headers/header-fiduciaire-geneve.webp') }}')">
        <div class="px-6 py-24 lg:px-8 bg-main bg-opacity-80">
            <div class="mx-auto max-w-2xl text-center">
                <h1 class="mt-2 text-4xl font-bold tracking-tight text-white sm:text-6xl">Blog</h1>
                <p class="mt-6 text-lg leading-8 text-gray-100">Retrouvez nos articles et publications qui accompagnent les entrepreneurs dans leur croissance.</p>
            </div>
        </div>
    </section>
    <section class="bg-white py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="flex gap-x-3.5 pb-10 items-center">
                <h3 class="text-lg sm:text-xl font-semibold leading-6 text-gray-900">Tous nos articles</h3>
                <p class="font-main border border-gray-400 text-gray-600 px-2 py-1 rounded-full text-xs">{{ allPosts | length }}</p>
            </div>
            <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
                {% for post in allPosts %}
                    <article class="flex flex-col items-start justify-between">
                        <div class="relative w-full">
                            <img src="{{ asset('media/blog/mainPhotos/'~post.mainPhoto) }}" alt="Photo de couverture de l'article" class="aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]">
                            <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
                        </div>
                        <div class="max-w-xl">
                            <div class="mt-8 flex items-center gap-x-4 text-xs">
                                <time datetime="{{ post.createdAt | date('d F Y') }}" class="text-gray-500">{{ post.createdAt | date('d F Y') | format_date(locale='fr') }}</time>
                                <span class="relative z-10 rounded-full px-3 py-1.5 font-medium text-gray-600 bg-gray-100">{{ post.category.name }}</span>
                            </div>
                            <div class="group relative">
                                <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                                    <a href="{{ path('app_blog_post', {'slug': post.slug }) }}">
                                        <span class="absolute inset-0"></span>
                                        {{ post.title }}
                                    </a>
                                </h3>
                                <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">{{ post.summary }}</p>
                            </div>
                            <div class="relative mt-8 flex items-center gap-x-4">
                                <img src="{{ asset('media/profilePhotos/'~post.authorProfilePhoto) }}" alt="Photo de profil de {{ post.authorName }}" class="h-10 w-10 rounded-full bg-gray-100">
                                <div class="text-sm leading-6">
                                    <p class="font-semibold text-gray-900">
                                        <span class="absolute inset-0"></span>
                                        {{ post.authorName }}
                                    </p>
                                    <p class="text-gray-600">{{ post.authorJob }}</p>
                                </div>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
