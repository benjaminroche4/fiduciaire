{% extends 'base.html.twig' %}

{% block title %}Erreur{% endblock %}
{% block robots %}noindex, nofollow{% endblock %}

{% block body %}
    <main class="grid min-h-full place-items-center bg-gray-50 px-6 py-32 sm:py-40 lg:px-8">
        <div class="text-center">
            <p class="text-base font-semibold text-red-custom">500</p>
            <h1 class="mt-4 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Erreur serveur</h1>
            <p class="mt-6 text-base leading-7 text-gray-600">Désolé, une erreur s'est produite.</p>
            <div class="mt-10 flex items-center justify-center gap-x-6">
                <a href="{{ path('app_home') }}" class="rounded-md bg-main px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-second transition duration-200">Page d'accueil</a>
                <a href="{{ path('app_contact') }}" class="text-sm rounded-lg font-semibold px-3.5 py-2.5 text-gray-900 border-solid border border-main hover:bg-white transition duration-200">Nous contacter</a>
            </div>
        </div>
    </main>
{% endblock %}