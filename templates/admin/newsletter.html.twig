{% extends 'admin/base_admin.html.twig' %}

{% block title %}Newsletter{% endblock %}

{% block body %}
    <section>
        <div class="border-b border-gray-200 bg-white py-5 px-6">
            <div class="flex gap-x-3.5 items-center">
                <h3 class="text-xl font-semibold leading-6 text-gray-900">Newsletter</h3>
                <p class="font-main border border-gray-400 text-gray-600 px-2 py-1 rounded-full text-xs">{{ usersList | length }}</p>
            </div>    </div>
        <div class="mt-8 flow-root">
            <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
                        <table class="min-w-full divide-y divide-gray-300">
                            <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Email</th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Inscription</th>
                                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                                    <span class="sr-only">Edit</span>
                                </th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 bg-white">
                                {% for user in usersList %}
                                    <tr>
                                        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">{{ user.email }}</td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><time datetime="{{ user.createdAt | date('d F Y') }}">{{ user.createdAt | date('d F Y') | format_date(locale='fr') }}</time></td>
                                        <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                                            <a href="{{ path('app_admin_newsletter_delete', {'id': user.id }) }}" class="text-main font-second hover:text-red-custom transition duration-200">Supprimer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
