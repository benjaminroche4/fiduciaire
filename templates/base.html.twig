            {% block body %}{% endblock %}

            {% set current_route = app.request.attributes.get('_route') %}
            {% set exception = app.request.attributes.get('exception') %}
            {% set status_code = exception ? exception.statusCode : 200 %}

            {% if current_route not in excluded_routes and status_code not in [404, 403, 500] %}
                {% include 'components/_block_CTA_footer.html.twig' %}
            {% endif %}
        </main>

        <section x-data="cookieConsent" x-cloak>
            <div x-bind="dialogue"  class="fixed inset-x-0 bottom-0 flex flex-col justify-between gap-x-8 gap-y-4 bg-main p-6 ring-1 ring-gray-900/10 md:flex-row md:items-center lg:px-8">
